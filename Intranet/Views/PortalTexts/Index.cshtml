@model IEnumerable<Intranet.Models.PortalText>
@{
    ViewData["Title"] = "Portal Texts";
}
<h1>@ViewData["Title"]</h1>
<form method="get" class="mb-3">
    <select name="section" onchange="this.form.submit()" class="form-select w-auto d-inline">
        <option value="">All sections</option>
        @foreach (var s in (IEnumerable<string>)ViewBag.Sections)
        {
            <option value="@s" selected="@(ViewBag.CurrentSection == s ? "selected" : null)">@s</option>
        }
    </select>
    <a asp-action="Create" class="btn btn-primary ms-2">Create New</a>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
            <th>Section</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Key</td>
            <td>@item.Value</td>
            <td>@item.Section</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
