@model Intranet.Models.PortalText
@{
    ViewData["Title"] = "Dodaj tekst portalu";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="Key" class="form-label">Klucz</label>
        <input asp-for="Key" class="form-control" />
        <span asp-validation-for="Key" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Value" class="form-label">Wartość</label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Section" class="form-label">Sekcja</label>
        <input asp-for="Section" class="form-control" />
        <span asp-validation-for="Section" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</form>
