@* Views/Shared/_Layout.cshtml *@
@using System.Security.Claims
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ciuchy Intranet</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #333;
                padding: 0.75rem 1rem;
                display: flex;
                align-items: center;
                gap: 0.75rem;
            }

                .sidebar .nav-link:hover {
                    background-color: #f8f9fa;
                }

                .sidebar .nav-link.active {
                    color: #0d6efd;
                    background-color: rgba(13, 110, 253, 0.1);
                    border-left: 3px solid #0d6efd;
                }

        .sidebar-heading {
            font-size: 0.75rem;
            text-transform: uppercase;
            padding: 1rem 1rem 0.5rem;
            color: #6c757d;
            font-weight: bold;
        }

        .navbar {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            background-color: #fff;
        }

        .navbar-brand {
            font-weight: 600;
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }

        .footer {
            background-color: #fff;
            border-top: 1px solid #dee2e6;
            padding: 1rem 0;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="pt-3 pb-2 mb-3 border-bottom">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="/images/place-holder.jpg" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                        <span class="ms-2">Ciuchy Intranet</span>
                    </a>
                </div>

                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index"
                           class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="bi bi-speedometer2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Zamowienia" asp-action="Index">Zamówienia</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Magazyn"
                           class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Magazyn" ? "active" : "")">
                            <i class="bi bi-box-seam"></i>
                            Magazyn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Harmonogram" asp-action="Index"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Harmonogram" ? "active" : "")">
                            <i class="bi bi-calendar-week"></i>
                            Harmonogram
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="ObslugaKlienta"
                           class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ObslugaKlienta" ? "active" : "")">
                            <i class="bi bi-people"></i>
                            Obsługa Klienta
                        </a>
                    </li>

                    <li class="sidebar-heading">Sprzedaż</li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-cart"></i>
                            Zamówienia
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-tag"></i>
                            Produkty
                        </a>
                    </li>

                    <li class="sidebar-heading">System</li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-gear"></i>
                            Ustawienia
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-question-circle"></i>
                            Pomoc
                        </a>
                    </li>
                     @if (User.IsInRole("Admin"))
                         {
                    
                    <li class="nav-item">
                             <a asp-controller="Admin" asp-action="Index"
                                  class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Admin"?"active":"")">
                                   <i class="bi bi-people-fill"></i>
                                   Użytkownicy
                            
                        </a>
                        
                    </li>
                     }

                    <li class="nav-item mt-4">
                        <a asp-controller="Auth" asp-action="Login" class="nav-link">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Logowanie
                        </a>
                    </li>
                </ul>

                <div class="mt-4 p-3 border-top">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <img src="/images/place-holder.jpg" alt="Avatar" class="user-avatar">
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold">
                                @User.FindFirstValue(ClaimTypes.GivenName)
                            </div>
                            <small class="text-muted">
                                @User.FindFirstValue(ClaimTypes.Role)
                            </small>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <nav class="navbar navbar-expand-lg navbar-light mb-4">
                    <div class="container-fluid">
                        <span class="navbar-text">
                            <i class="bi bi-shop me-2"></i>Sklep: Warszawa Centrum
                        </span>
                        <div class="d-flex align-items-center">
                            <a href="#" class="btn btn-outline-secondary btn-sm me-2">
                                <i class="bi bi-bell"></i>
                                <span class="badge bg-danger">3</span>
                            </a>

                            <!-- Logout form -->
                            <form asp-controller="Auth"
                                  asp-action="Logout"
                                  method="post"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-box-arrow-right"></i> Wyloguj
                                </button>
                            </form>
                        </div>
                    </div>
                </nav>

                @RenderBody()

                <footer class="footer text-center">
                    <div class="container">
                        <span class="text-muted">© 2025 Ciuchy Sp. z o.o. Wszelkie prawa zastrzeżone.</span>
                    </div>
                </footer>
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
