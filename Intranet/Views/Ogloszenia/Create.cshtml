@model Intranet.Models.Ogloszenie
@using Intranet.Models // Dla dostępu do enuma TypOgloszenia

@{
    ViewData["Title"] = "Dodaj nowe ogłoszenie";
    Layout = "_Layout"; // Upewnij się, że to Twój główny layout
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Tytul" class="form-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tresc" class="form-label"></label>
                <textarea asp-for="Tresc" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DataPublikacji" class="form-label"></label>
                    <input asp-for="DataPublikacji" type="date" class="form-control" />
                    <span asp-validation-for="DataPublikacji" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Dzial" class="form-label"></label>
                    <input asp-for="Dzial" class="form-control" />
                    <span asp-validation-for="Dzial" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Typ" class="form-label"></label>
                <select asp-for="Typ" asp-items="Html.GetEnumSelectList<TypOgloszenia>()" class="form-select">
                    <option value="">-- Wybierz typ ogłoszenia --</option>
                </select>
                <span asp-validation-for="Typ" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="CzyWazne" />
                <label class="form-check-label" asp-for="CzyWazne">
                    Ważne ogłoszenie (wyróżnione)
                </label>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Dodaj ogłoszenie</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
