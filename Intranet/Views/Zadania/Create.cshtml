@model Intranet.Models.Zadanie
@using Intranet.Models // Dla enuma PriorytetZadania

@{
    ViewData["Title"] = "Dodaj nowe zadanie";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* PracownikId będzie ustawiane automatycznie w kontrolerze dla zalogowanego użytkownika,
               ale jeśli admin dodaje zadanie dla kogoś innego, potrzebowalibyśmy tu listy rozwijanej pracowników.
               Na razie zakładamy, że użytkownik dodaje zadanie dla siebie lub admin ustawia to w logice.
               Jeśli PracownikId jest w [Bind] w kontrolerze, to to ukryte pole jest potrzebne, jeśli
               PracownikId jest ustawiane w akcji GET Create.
            *@
            <input type="hidden" asp-for="PracownikId" />


            <div class="mb-3">
                <label asp-for="Tytul" class="form-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Opis" class="form-label"></label>
                <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TerminWykonania" class="form-label"></label>
                    <input asp-for="TerminWykonania" type="date" class="form-control" />
                    <span asp-validation-for="TerminWykonania" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Priorytet" class="form-label"></label>
                    <select asp-for="Priorytet" asp-items="Html.GetEnumSelectList<PriorytetZadania>()" class="form-select">
                        <option value="">-- Wybierz priorytet --</option>
                    </select>
                    <span asp-validation-for="Priorytet" class="text-danger"></span>
                </div>
            </div>

            @* DataUtworzenia i CzyWykonane będą ustawiane automatycznie w kontrolerze *@

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Dodaj zadanie</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
