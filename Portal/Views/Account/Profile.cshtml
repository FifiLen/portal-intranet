@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Podstawowa interakcja dla mockupu

            // Obsługa edycji danych osobowych
            const editPersonalDataBtn = document.getElementById('edit-personal-data');
            const personalDataView = document.getElementById('personal-data-view');
            const personalDataForm = document.getElementById('personal-data-form');
            const cancelEditBtn = document.getElementById('cancel-edit');

            if (editPersonalDataBtn && personalDataView && personalDataForm && cancelEditBtn) {
                editPersonalDataBtn.addEventListener('click', function() {
                    personalDataView.classList.add('hidden');
                    personalDataForm.classList.remove('hidden');
                });

                cancelEditBtn.addEventListener('click', function() {
                    personalDataForm.classList.add('hidden');
                    personalDataView.classList.remove('hidden');
                });

                personalDataForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    personalDataForm.classList.add('hidden');
                    personalDataView.classList.remove('hidden');
                    alert('Dane zostały zapisane (mockup)');
                });
            }

            // Obsługa nawigacji w profilu
            const navItems = document.querySelectorAll('.profile-nav-item');

            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Usuń aktywną klasę ze wszystkich elementów
                    navItems.forEach(navItem => {
                        navItem.classList.remove('bg-black', 'text-white');
                        navItem.classList.add('hover:bg-gray-100');
                    });

                    // Dodaj aktywną klasę do klikniętego elementu
                    this.classList.add('bg-black', 'text-white');
                    this.classList.remove('hover:bg-gray-100');

                    // Przewiń do odpowiedniej sekcji
                    const targetId = this.getAttribute('href');
                    const targetSection = document.querySelector(targetId);

                    if (targetSection) {
                        window.scrollTo({
                            top: targetSection.offsetTop - 100,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Obsługa modalu adresu
            const addressModal = document.getElementById('address-modal');
            const addAddressBtn = document.getElementById('add-address');
            const addAddressCard = document.getElementById('add-address-card');
            const closeAddressModalBtn = document.getElementById('close-address-modal');
            const cancelAddressModalBtn = document.getElementById('cancel-address-modal');

            function openAddressModal() {
                addressModal.classList.remove('hidden');
            }

            function closeAddressModal() {
                addressModal.classList.add('hidden');
            }

            if (addAddressBtn) {
                addAddressBtn.addEventListener('click', openAddressModal);
            }

            if (addAddressCard) {
                addAddressCard.addEventListener('click', openAddressModal);
            }

            if (closeAddressModalBtn) {
                closeAddressModalBtn.addEventListener('click', closeAddressModal);
            }

            if (cancelAddressModalBtn) {
                cancelAddressModalBtn.addEventListener('click', closeAddressModal);
            }

            // Obsługa formularzy
            const addressForm = document.getElementById('address-form');
            const changePasswordForm = document.getElementById('change-password-form');
            const communicationPreferencesForm = document.getElementById('communication-preferences-form');

            if (addressForm) {
                addressForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    closeAddressModal();
                    alert('Adres został zapisany (mockup)');
                });
            }

            if (changePasswordForm) {
                changePasswordForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Hasło zostało zmienione (mockup)');
                    this.reset();
                });
            }

            if (communicationPreferencesForm) {
                communicationPreferencesForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Preferencje zostały zapisane (mockup)');
                });
            }

            // Efekt parallax dla hero image
            const handleParallax = function() {
                const scrollPosition = window.pageYOffset;
                const viewportHeight = window.innerHeight;

                const heroSection = document.querySelector(".hero-image");
                if (heroSection && scrollPosition < viewportHeight) {
                    const translateY = Math.min(scrollPosition * 0.05, viewportHeight * 0.2);
                    heroSection.style.transform = `scale(1.1) translateY(${translateY}px)`;
                }
            };

            window.addEventListener('scroll', handleParallax);
            handleParallax();
        });
    </script>
}
