@model Intranet.Models.Uzytkownik
@{
    ViewData["Title"] = "Profil";
    var orders = ViewData["Orders"] as List<Intranet.Models.Zamowienie> ?? new();
}
<div class="py-16 px-6 md:px-12 lg:px-24">
    <div class="max-w-2xl mx-auto">
        <form asp-action="Update" method="post" class="bg-white p-6 shadow">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="mb-4">
                <label class="block mb-1">Imię</label>
                <input type="text" name="imie" value="@Model.Imie" class="w-full border px-3 py-2" />
            </div>
            <div class="mb-4">
                <label class="block mb-1">Nazwisko</label>
                <input type="text" name="nazwisko" value="@Model.Nazwisko" class="w-full border px-3 py-2" />
            </div>
            <div class="mb-4">
                <label class="block mb-1">Email</label>
                <input type="email" name="email" value="@Model.Email" class="w-full border px-3 py-2" />
            </div>
            <div class="mb-4">
                <label class="block mb-1">Telefon</label>
                <input type="text" name="numerTelefonu" value="@Model.NumerTelefonu" class="w-full border px-3 py-2" />
            </div>
            <button class="bg-black text-white px-4 py-2">Zapisz</button>
        </form>

        <div class="mt-8">
            <h3 class="text-xl mb-4">Twoje zamówienia</h3>
            @if (!orders.Any())
            {
                <p>Brak zamówień.</p>
            }
            else
            {
                <ul class="space-y-2">
                    @foreach (var o in orders)
                    {
                        <li>Zamówienie #@o.Id - @o.Status - @o.LacznaWartosc.ToString("0.00") zł</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
