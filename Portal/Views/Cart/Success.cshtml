@model Intranet.Models.Zamowienie
@{
    ViewData["Title"] = "Dziękujemy za zakupy";
}

<div class="relative h-[40vh] overflow-hidden">
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/30 z-10"></div>
        <div class="hero-image absolute inset-0 bg-cover bg-center"
             style="background-image: url('/images/place-holder.jpg');"></div>
    </div>
    <div class="absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 z-10">
        <h1 class="text-6xl md:text-7xl font-light text-white tracking-tight hero-title text-center">
            @ViewData["Title"]
        </h1>
    </div>
</div>

<section class="py-16 px-6 md:px-12 lg:px-24 bg-white relative z-10 text-center">
    <div class="max-w-xl mx-auto space-y-6">
        <p class="text-lg">
            Numer zamówienia: <strong>@Model.Id</strong>
        </p>

        <a asp-controller="Home" asp-action="Index"
           class="inline-block px-8 py-4 bg-black text-white font-medium
                  hover:bg-gray-800 transition-colors">
            Powrót do sklepu
        </a>
    </div>
</section>
